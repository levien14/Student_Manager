@model IEnumerable<StudentManager.Models.Grade>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>

    <a asp-action="Create" class="btn btn-success" title="create"><i class="glyphicon glyphicon-plus"></i></a>
        
</p>
<table class="table ">
    <thead>
        <tr class="warning">
            <th>
                @Html.DisplayNameFor(model => model.GradeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Subject
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GradeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @foreach (var s in item.SubjectGrades)
                {
                    @s.Subject.Name
                }
            </td>
            <td>

                <a asp-action="Edit" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i></a>&nbsp;
                <a asp-action="Details" asp-route-id="@item.Id"><i class="glyphicon glyphicon-list-alt"></i></a>&nbsp;
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1"><i class="glyphicon glyphicon-trash"></i></a>&nbsp;
                <a asp-action="AddSubject" asp-route-id="@item.Id" ><i class="glyphicon glyphicon-plus"></i></a>

            </td>
                
        </tr>
       
}
    </tbody>
</table>
