@model StudentManager.Models.Account

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<style>
    .avatar {
        vertical-align: middle;
        width: 80px;
        height: 80px;
        border-radius: 800%;
    }
</style>
<div>
    <h4>Account</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <img src="https://www.w3schools.com/howto/img_avatar.png" alt="Avatar" class="avatar">
        </dt>
        <dd style="margin:0,20,0,0;">
            <b> @Html.DisplayFor(model => model.UserName)</b>
        </dd>
        <br />
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
        <br />

        <dt>
            FullName
        </dt>
        <dd>
            @Model.Person.FirstName @Model.Person.LastName
        </dd>
        <dt>
            Address
        </dt>
        <dd>
            @Model.Person.Address
        </dd>

        <dt>
            Birthday
        </dt>
        <dd>
            @Model.Person.BOD
        </dd>
        <dt>
            Phone
        </dt>
        <dd>
            @Model.Person.Phone
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="AddGrade" asp-route-id="@Model.Id">Add Grade</a> |
    <a asp-action="Index">Back to List</a>
</div>
