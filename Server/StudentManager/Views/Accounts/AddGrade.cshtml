@model StudentManager.Models.GradeStudent
@{
    ViewData["Title"] = "AddGrade";
}

<h2>AddGrade</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGrade">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountId" value="@ViewData["AccountId"]" />
            
            <div class="form-group">
                <label asp-for="GradeId" class="control-label"></label>
                <select asp-for="GradeId" class="form-control" asp-items="ViewBag.GradeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="AddGrade" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
